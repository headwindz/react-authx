{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "module": "esnext",
    "target": "es5",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "noImplicitAny": true,
    "removeComments": true,
    "paths": {
      "@src": ["src/"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__/**/*"]
}
